<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sportway" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/screen_background</item>
        <item name="colorPrimaryVariant">@color/black_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/secondary_grey_text</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="Theme.Sportway.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/screen_background</item>
    </style>

    <style name="Theme.Sportway.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>